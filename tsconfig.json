{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": ["./node_modules/@types", "src/@types"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
